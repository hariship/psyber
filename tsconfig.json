{
    "compilerOptions": {
      "outDir": "./built",
      "allowJs": true,
      "target": "ES5",
      "moduleResolution": "node",
      "sourceMap": true,
      "preserveConstEnums": true,
      "types": ["node"],
      "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.js"],
    "lib": [
      "ES2017",
      "ES2015.core"
    ]
}